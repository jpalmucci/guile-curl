(define* (curl-easy-setopt handle option #:optional arg)
  ""
  (cond
   ((eq? option 'verbose) 
    (%curl-easy-setopt CURLOPT_VERBOSE (c-bool arg)))
   ((eq? option 'header)
    (%curl-easy-setopt CURLOPT_HEADER (c-bool arg)))
   ((eq? option 'nosignal)
    (%curl-easy-setopt CURLOPT_NOSIGNAL (c-bool arg)))
   ((eq? option 'wildcardmatch)
    (%curl-easy-setopt CURLOPT_WILDCARDMATCH (c-bool arg)))
   ((eq? option 'url CURLOPT_URL)
    (if (not (string? arg))
	(scm-error 'wrong-type-arg "String argument expected: ~A" (list arg) (list arg))
	(%curl-easy-setopt CURL_URL arg)))
   ((eq? option 'protocols)
    (if (not (and (integer? arg) (exact? arg))
	(scm-error 'wrong-type-arg "Integer nteger argument expected: ~A" (list arg) (list arg))
	(%curl-easy-setopt CURLOPT_PROTOCOLS arg)))
   ((eq? option 'redir-protocols)
    (if (not (and (integer? arg) (exact? arg)))
	(scm-error 'wrong-type-arg "Integer argument expected: ~A" (list arg) (list arg))
	(%curl-easy-setopt CURLOPT_REDIR_PROTOCOLS arg)))
   ((eq? option 'proxy)
    (if (not (string? arg))
	(scm-error 'wrong-type-arg "String argument expected: ~A" (list arg) (list arg))
	(%curl-easy-setopt CURLOPT_PROXY arg)))
   ((eq? option 'proxyport)
    (if (not (and (integer? arg) (exact? arg)))
	(scm-error 'wrong-type-arg "Integer argument expected: ~A" (list arg) (list arg))
	(%curl-easy-setopt CURLOPT_PROXYPORT arg)))
   ((eq? option 'proxytype)
    (if (not (and (integer? arg) (exact? arg)))
	(scm-error 'wrong-type-arg "Integer argument expected: ~A" (list arg) (list arg))
	(%curl-easy-setopt CURLOPT_PROXYPORT arg)))
   ((eq? option 'noproxy)
    (if (not (string? arg))
	(scm-error 'wrong-type-arg "String argument expected: ~A" (list arg) (list arg))
	(%curl-easy-setopt CURLOPT_NOPROXY arg)))
   ((eq? option 'httpproxytunnel)
    (%curl-easy-setopt CURLOPT_HTTPPROXYTUNNEL (c-bool arg)))
   ((eq? option 'socks5-gssapi-service)
    (if (not (string? arg))
	(scm-error 'wrong-type-arg "String argument expected: ~A" (list arg) (list arg))
	(%curl-easy-setopt CURLOPT_SOCKS5_GSSAPI_NEC arg)))
   ((eq? option 'socks5-gssapi-nec)
    (%curl-easy-setopt CURLOPT_SOCKS5_GSSAPI_NEC (c-bool arg)))
   ((eq? option 'interface)
    (if (not (string? arg))
	(scm-error 'wrong-type-arg "String argument expected: ~A" (list arg) (list arg))
	(%curl-easy-setopt CURLOPT_INTERFACE arg)))
  
  (%curl-easy-setopt handle option arg))

